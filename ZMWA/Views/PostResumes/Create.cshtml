@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc;
@model ZMWA.Models.PostResume

@{
    ViewBag.Title = "Post Resume";
}

@using (Html.BeginForm("Create", "PostResumes", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

