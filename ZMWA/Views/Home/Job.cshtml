@model ZMWA.Models.Contact

@{
    ViewBag.Title = "Job";
}

<h2>Job</h2>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    <script src="@Url.Content("https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/layout.js")" type="text/javascript"></script>


    <link href="~/Content/layout.css" rel="stylesheet" type="text/css" />


</head>
<body>
    <div>
        <img class="img-responsive" src="~/Content/Images/career.jpg" alt="career image" />
    </div>
    <h2 style="text-align:center;color:darkmagenta;margin-top:100px;">Job opportunity</h2>
    <table style="width:100%;border:double; margin-bottom:100px;">
        <tr style="background-color:cadetblue">
            <th>Job Title</th>
            <th>Experience Required</th>
            <th>Location</th>
        </tr>
        <tr>
            <td>Senior softeware Engineer</td>
            <td>2-3 Years</td>
            <td>Indore</td>
        </tr>
    </table>
    <div class="row">
        <div class="col-md-3">
            <img src="~/Content/Images/submit_resume_button.png" class="img-responsive" alt="image" />
        </div>
        <div class="col-md-6">
            <h3>Post your resume here</h3>
            <p>
                We are always looking for good candidates to join our team! We strongly encourage you to submit your resume to our resume database for future positions. We will contact you if there are any suitable openings matching your skills and career aspirations
            </p>
            <div class="btn btn-default">
                @Html.ActionLink("Read More", "Job", "Home")

            </div>
        </div>
    </div>

</body>

</html>